%fieldset.control-group.large
  %label.control-label{:for => :page_max_size}= hb_i18n("usercp.pages.manage.js.max_size_width")
  .controls
    = number_field_tag(:page_max_size, hb("or page.max_size 0"), :min => 0, :class => "input-mini")
    %span.help-block= hb_i18n("usercp.pages.manage.js.max_size_width_desc")

%fieldset.control-group.large
  %label.control-label{:for => :page_max_media}= hb_i18n("usercp.pages.manage.js.max_media")
  .controls
    = number_field_tag(:page_max_media, hb("or page.max_media 0"), :min => 0, :class => "input-mini")
    %span.help-block= hb_i18n("usercp.pages.manage.js.max_media_desc")

%fieldset.control-group.large
  %label.control-label{:for => :page_per_page}= hb_i18n("usercp.pages.manage.js.per_page")
  .controls
    = number_field_tag(:page_per_page, hb("or page.per_page 15"), :min => 0, :class => "input-mini")
    %span.help-block= hb_i18n("usercp.pages.manage.js.per_grid_desc")

%fieldset.control-group.large
  %label.control-label{:for => :page_sort_by}= hb_i18n("usercp.pages.manage.js.sort_by")
  .controls
    %select.input-small{:name => "page_sort_by_key"}
      - Media::SORTABLE.each_key do |key|
        = hb! "option \"#{key}\" \"usercp.pages.manage.js.sort.#{key}\" page.sort_by 0 0"

    %select.input-mini{:name => "page_sort_by_mode"}
      - ["asc", "desc"].each do |key|
        = hb! "option \"#{key}\" \"usercp.pages.manage.js.#{key}\" page.sort_by 0 1"

    %span.help-block= hb_i18n("usercp.pages.manage.js.sort_by_desc")

= hb "> album_select"